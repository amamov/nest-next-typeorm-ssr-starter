{
  "name": "nest-next-typeorm-mvc-ssr-stater",
  "version": "0.0.1",
  "scripts": {
    "dev": "nodemon server/main.ts",
    "build:clean": "rimraf .next",
    "build:ui": "npx next build",
    "build:server": "npx tsc --project tsconfig.server.json && npx babel .next/production-server -d .next/production-server --extensions \".js\"",
    "build": "npm run build:clean && npm run build:ui && npm run build:server",
    "start": "cross-env NODE_ENV=production node .next/production-server/server/main.js",
    "lint": "eslint \"{server,pages,components}/**/*.ts\" --fix",
    "prettier": "npx prettier -w .",
    "prettier:fix": "npx prettier -c .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^8.1.2",
    "@nestjs/config": "^1.1.0",
    "@nestjs/core": "^8.1.2",
    "@nestjs/platform-express": "^8.1.2",
    "@nestjs/typeorm": "^8.0.2",
    "@toast-ui/react-editor": "^3.1.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "cross-env": "^6.0.3",
    "joi": "^17.4.2",
    "mysql2": "^2.3.2",
    "nest-next": "^9.4.0",
    "next": "^12.0.2",
    "react": "17",
    "react-dom": "17",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^2.1.3",
    "rxjs": "^6.5.2",
    "sharp": "^0.29.2",
    "typeorm": "^0.2.38",
    "typeorm-snake-naming-strategy": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^12.7.1",
    "@types/react": "^16.9.1",
    "@types/request-ip": "^0.0.37",
    "@types/sharp": "^0.29.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.26.1",
    "jest": "^27.0.6",
    "nodemon": "^2.0.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.4.4",
    "webpack": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "server",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
